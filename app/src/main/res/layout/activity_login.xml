<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ĐĂNG NHẬP"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#006600"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="#EEEEEE">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="@string/email"
                android:textSize="20sp" />
        <RelativeLayout
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn01"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:id="@+id/emailicon"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:padding="6dp"
                    android:src="@drawable/ic_account1"
                    app:tint="#fff" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/btn01"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/emailicon"
                app:tint="#fff" />
            <EditText
                android:id="@+id/etLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="textPersonName"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/emailicon"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:hint="Nhập email"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_below="@+id/bt1"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn01"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:id="@+id/passwordicon"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:padding="6dp"
                    android:src="@drawable/ic_password"
                    app:tint="#fff" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/btn01"
                android:layout_toRightOf="@+id/passwordicon"
                app:tint="#fff" />

            <EditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/passwordicon"

                android:hint="Nhâp mật khẩu"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_below="@id/bt2"
                android:layout_marginTop="60dp"
                android:background="@drawable/btn01">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="65dp"
                    android:gravity="center"
                    android:text="Đăng nhập"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white"
                    android:textSize="23sp" />
            </RelativeLayout>

                <TextView
                    android:id="@+id/tvSwitchToForgotPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:gravity="center"
                    android:text="Quên mật khẩu?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#0037FF"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/btnLogin"
                    />
                <TextView
                    android:id="@+id/tvSwitchToRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:gravity="center"
                    android:text="Đăng kí"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/tvSwitchToForgotPass"
                    />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Phiên bản 2020"
        android:textStyle="bold"
        android:textSize="18dp"/>
</LinearLayout>

